<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity
    name="App\Domain\User\Group"
    table="group">
    <id name="uuid" type="guid" column="uuid"/>
    <field name="name" type="string" column="name" nullable="false"/>
    <field name="startDate" type="datetimetz" column="start_date" nullable="false">
        <options>
            <option name="default">CURRENT_TIMESTAMP</option>
        </options>
    </field>
    <field name="endDate" type="datetimetz" column="end_date" nullable="true" />
    <many-to-many field="users" inversed-by="groups" target-entity="App\Domain\User\User">
        <cascade>
            <cascade-all/>
        </cascade>
        <join-table name="user_group">
            <join-columns>
                <join-column name="group_uuid" referenced-column-name="uuid" />
            </join-columns>
            <inverse-join-columns>
                <join-column name="user_uuid" referenced-column-name="uuid" />
            </inverse-join-columns>
        </join-table>
    </many-to-many>
  </entity>
</doctrine-mapping>
