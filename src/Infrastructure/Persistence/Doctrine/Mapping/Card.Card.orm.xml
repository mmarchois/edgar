<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity
    name="App\Domain\Card\Card"
    table="card">
    <id name="uuid" type="guid" column="uuid"/>
    <field name="name" type="string" column="name" nullable="false" length="100"/>
    <field name="code" type="string" column="code" nullable="false" length="100"/>
    <many-to-many field="groups" inversed-by="cards" target-entity="App\Domain\User\Group">
        <cascade>
            <cascade-all/>
        </cascade>
        <join-table name="card_group">
            <join-columns>
                <join-column name="card_uuid" referenced-column-name="uuid" />
            </join-columns>
            <inverse-join-columns>
                <join-column name="group_uuid" referenced-column-name="uuid" />
            </inverse-join-columns>
        </join-table>
    </many-to-many>
  </entity>
</doctrine-mapping>
