{% extends 'base.html.twig' %}
{% block title %}{{ 'shoppingList.save.title'|trans }} - {{ parent() }}{% endblock %}
{% block navTitle 'shoppingList.save.title'|trans %}
{% block navLeft %}
    <a href="{{ path('app_shoppinglists') }}" class="headerButton">
        <ion-icon name="chevron-back-outline" role="img" class="md hydrated" aria-label="chevron back outline"></ion-icon>
    </a>
{% endblock %}

{% block body %}
    <div class="section mt-2">
        {{ form_start(form) }}
            <div class="card">
                <div class="card-body">
                    {{ form_row(form.name)}}
                </div>
            </div>
            <div class="mt-2">
                <button type="submit" class="btn btn-primary btn-block btn-lg">{{ 'common.submit'|trans }}</button>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
