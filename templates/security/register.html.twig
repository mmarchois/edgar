{% extends 'base.html.twig' %}
{% block title %}{{ 'register.meta.title'|trans }} - {{ parent() }}{% endblock %}

{% block body %}
    <div class="section mt-3 text-center">
        <h1>{{ 'register.title'|trans }}</h1>
        <h4>{{ 'register.subtitle'|trans }}</h4>
    </div>
    <div class="section mb-5 p-2">
        {{ form_start(form) }}
            <div class="card">
                <div class="card-body">
                    {{ form_row(form.pseudo)}}
                    {{ form_row(form.email)}}
                    {{ form_row(form.password)}}
                </div>
            </div>
            <div class="form-links mt-2">
                <div>
                    <a href="{{ path('app_login') }}">{{ 'register.already_have_an_account'|trans }}</a>
                </div>
            </div>
            <div class="mt-2">
                <button type="submit" class="btn btn-primary btn-block btn-lg">{{ 'register.submit'|trans }}</button>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
